:root
  --navbar-width: 90vw
  @media screen and (max-width: max_width_medium)
    --navbar-width: 93.5vw
  @media screen and (min-width: max_width_big)
    --navbar-width: max_width_big
  
.stickylogo
  position relative
  flex 1
  size 0 0
  @media screen and (max-width: max_width_medium)
    padding-left 1vw
  img
    size 3em auto
    @media screen and (max-width: max_width_medium)
      size 3.9vw auto
      margin-left: 5px

.stickybar
  position sticky
  top -15px
  background-color: rgba(#f, 0.9)
  z-index 100
  nav.navbar
    position relative
    display flex
    justify-content space-between
    margin auto
    padding-top: 30px
    line-height: 1
    width calc(var(--navbar-width) - 2.5vw)
    .info
      padding-bottom 15px
      float left
      .name
        color: var(--dark-blue)
        font-size 3em
        @media screen and (max-width: max_width_medium)
          font-size 4vw
      .version
        color: var(--version-color)
        padding-left 5px
        font-size 0.75em
        font-weight: 250
      *
        display inline-block
      @media screen and (max-width: max_width_medium)
        padding 0px
    .links
      color: var(--text-color)
      display inline-block
      margin 0
      font-size: 1.25em
      font-weight: 379
      a
        padding-left 5px
      @media screen and (min-width: max_width_medium)
        margin-top 15px
      @media screen and (max-width: max_width_medium)
        margin-bottom 15px
        font-size 3.4vw
        padding 0

.hl.breaker
  background: var(--header-color);
  z-index -1
  width var(--navbar-width)
  height 2px